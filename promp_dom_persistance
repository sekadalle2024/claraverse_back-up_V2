    ### 4. PERSISTANCE DE DONN√âES
    ### LocalStorage - Synchrone
    javascript
    `_// Sauvegarde structure compl√®te de table_
    function saveTableToLocalStorage(table, tableId) {
    const tableData = {
    id: tableId,
    html: table.outerHTML,
    structure: extractTableData(table),
    timestamp: Date.now(),
    metadata: {
    rows: table.querySelectorAll('tr').length,
    columns: table.querySelector('tr')?.children.length || 0
    }
    };
        localStorage.setItem(`claraverse_table_${tableId}`, JSON.stringify(tableData));
    }
    _// Restauration_
    function restoreTableFromLocalStorage(tableId) {
    const data = localStorage.getItem(`claraverse_table_${tableId}`);
    if (!data) return null;
        return JSON.parse(data);
    }
    _// Gestion quota (5-10MB limite)_
    function checkLocalStorageQuota() {
    let total = 0;
    for (let key in localStorage) {
    if (localStorage.hasOwnProperty(key)) {
    total += localStorage[key].length + key.length;
    }
    }
    return total;
    }`
    ### IndexedDB - Asynchrone pour Gros Volumes
    javascript
    `_// Initialisation base de donn√©es_
    function initIndexedDB() {
    return new Promise((resolve, reject) => {
    const request = indexedDB.open('ClaraVerseDB', 1);
          request.onerror = () => reject(request.error);
          request.onsuccess = () => resolve(request.result);

          request.onupgradeneeded = (event) => {
            const db = event.target.result;

            if (!db.objectStoreNames.contains('tables')) {
              const objectStore = db.createObjectStore('tables', { keyPath: 'id' });
              objectStore.createIndex('timestamp', 'timestamp', { unique: false });
            }
          };
        });
    }
    _// Sauvegarde table dans IndexedDB_
    async function saveTableToIndexedDB(tableId, tableData) {
    const db = await initIndexedDB();
    const transaction = db.transaction(['tables'], 'readwrite');
    const objectStore = transaction.objectStore('tables');
        const data = {
          id: tableId,
          html: tableData.html,
          structure: tableData.structure,
          timestamp: Date.now()
        };

        return new Promise((resolve, reject) => {
          const request = objectStore.put(data);
          request.onsuccess = () => resolve(request.result);
          request.onerror = () => reject(request.error);
        });
    }
    _// R√©cup√©ration_
    async function getTableFromIndexedDB(tableId) {
    const db = await initIndexedDB();
    const transaction = db.transaction(['tables'], 'readonly');
    const objectStore = transaction.objectStore('tables');
        return new Promise((resolve, reject) => {
          const request = objectStore.get(tableId);
          request.onsuccess = () => resolve(request.result);
          request.onerror = () => reject(request.error);
        });
    }`
    ### SessionStorage - Temporaire Session
    javascript
    `_// Sauvegarde temporaire pendant session_
    function saveTemporaryState(key, data) {
    sessionStorage.setItem(key, JSON.stringify(data));
    }
    _// Utilisation pour √©tats UI temporaires_
    sessionStorage.setItem('activeTableId', tableId);
    sessionStorage.setItem('lastModified', Date.now());`
